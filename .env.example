# Application Settings
APP_NAME="Khoros Care AI Assist API"
APP_VERSION="1.0.0"
DEBUG=true
HOST="0.0.0.0"
PORT=8000

# MongoDB Configuration
MONGODB_URI="mongodb://localhost:27017"
DATABASE_NAME="khoros_care"

# Security
JWT_SECRET_KEY="your-secret-key-change-this-in-production"
JWT_ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS (comma separated)
CORS_ORIGINS="http://localhost:5173,http://localhost:3000,http://localhost:8000,http://localhost:8080,http://localhost:8081,http://localhost:5174"

# AWS S3 Configuration
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
S3_BUCKET_NAME="khoros-knowledge-base"

# OpenAI Configuration
OPENAI_API_KEY="your-openai-api-key"

# Firecrawl Configuration
FIRECRAWL_API_KEY="your-firecrawl-api-key"
USE_FIRECRAWL=true